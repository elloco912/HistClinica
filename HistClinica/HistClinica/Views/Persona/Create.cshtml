@model HistClinica.DTO.PersonaDTO

@{
	ViewBag.Title = "Registro";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

	<div class="container">
		<div class="col-sm-12">
			<div class="row">
				<div class="col-sm-12 pb-2">
					<div class="card card-primary">
						<div class="card-header">
							<h2>Registro de personal</h2>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-12">
			@using (Html.BeginForm())
			{
				<div class="row">
					<div class="col-md-6">
						<div class="box box-primary">
							<div class="box-body">
								<div class="form-group">
									<label>TIPO DE EMPLEADO</label>
								</div>
								<div class="form-group">
									@Html.DropDownListFor(m => m.idTipoEmpleado, new SelectList(ViewBag.lsttipoempleado, "idtpEmpleado", "Descripcion"), new { @class = "form-control" })
								</div>
								<div class="form-group">
									<label for="txtNombres">NOMBRES</label>
								</div>
								<div class="form-group">
									@Html.TextBoxFor(m => m.nombres, new { @class = "form-control" })
								</div>
								<div class="form-group">
									<label for="txtNroDocumento">DOCUMENTO DE IDENTIDAD</label>
								</div>
								<div class="form-group">
									@Html.TextBoxFor(m => m.dni, new { @class = "form-control" })
								</div>
								<div class="form-group">
									<label for="txtNroColegio">N° DE COLEGIO</label>
								</div>
								<div class="form-group">
									@Html.TextBoxFor(m => m.numeroColegio, new { @class = "form-control" })
								</div>
								<div class="form-group">
									<label for="txtruc">N° DE RUC</label>
								</div>
								<div class="form-group">
									@Html.TextBoxFor(m => m.ruc, new { @class = "form-control" })
								</div>
								<div class="form-group">
									<label for="txtespecialidad">ESPECIALIDAD</label>
								</div>
								<div class="form-group">
									@Html.DropDownListFor(m => m.idEspecialidad, new SelectList(ViewBag.listaespecialidades, "idEspecialidad", "descripcion"), new { @class = "form-control" })
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="box box-primary">
							<div class="box-body">
								<div class="form-group">
									<label for="txtarea">AREA</label>
								</div>
								<div class="form-group">
									@Html.TextBoxFor(m => m.area, new { @class = "form-control" })
								</div>
								<div class="form-group">
									<label for="txtApPaterno">APELLIDOS</label>
								</div>
								<div class="form-group">
									@Html.TextBoxFor(m => m.apellidos, new { @class = "form-control" })
								</div>
								<div class="form-group">
									<label id="txtfecingresopersonal">FECHA INGRESO</label>
								</div>
								<div class="form-group">
									@Html.TextBoxFor(m => m.fechaIngreso, new { @class = "form-control", @type = "Date" })
								</div>
								<div class="form-group">
									<label for="txtcargo">CARGO</label>
								</div>
								<div class="form-group">
									@Html.TextBoxFor(m => m.cargo, new { @class = "form-control" })
								</div>
								<div class="form-group">
									<label for="txtTelefono">TELÉFONO</label>
								</div>
								<div class="form-group">
									@Html.TextBoxFor(m => m.telefono, new { @class = "form-control" })
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row m-0 p-0 pb-2">
					<div class="col-sm-12 text-right">
						<input type="submit" class="btn btn-primary" style="width: 112px;font-size: 16px;" value="Guardar">
					</div>
				</div>
			}
		</div>
	</div>


@model IEnumerable<HistClinica.Models.D012_CRONOMEDICO>

<div class="modal-dialog modal-lg" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h2 class="modal-title text-center" id="exampleModalLabel1">Consultar cronograma</h2>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="container">
			<div class="col-sm-12 pt-3">


				@using (Html.BeginForm())
				{
					<div class="row pb-2">
						<div class="col-sm-4">
							<div class="row">
								<div class="col-sm-4">
									<label>Medico</label>
								</div>
								<div class="col-sm-8">
									@Html.DropDownList("idmedico", new SelectList(ViewBag.listamedicos, "idMedico", "nombres"), "Seleccione", new { @class = "form-control" })
								</div>
							</div>
						</div>
						<div class="col-sm-4">
						</div>
						<div class="col-sm-4">

						</div>
					</div>
				}
				<input type="submit" onclick="BuscarCronograma();" class="btn btn-primary" value="Buscar"/>

				<div class="row pt-3">
					<div class="col-sm-12">
						<table class="table table-bordered table-hover text-center" id="cronogramagrid">
							<thead>
								<tr>
									<th>Id</th>
									<th>Fecha</th>
									<th>Hora ini</th>
									<th>Hora fin</th>
									<th>Estado</th>
									<th>Acciones</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.idProgramMedica</td>
										<td>@item.fecProgramMedica</td>
										<td>@item.hrInicio</td>
										<td>@item.hrFin</td>
										<td>@item.idEstado</td>
										<td>
											<button type="submit" class="edit btn btn-primary" onclick="Cargarmodal();"><i class="fas fa-edit"></i></button>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@model HistClinica.Models.CronoMedico
<div class="modal-dialog modal-lg" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title text-center" id="exampleModalLabel">Actualizar cronograma</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		@using (Html.BeginForm("Edit", "Cronograma"))
		{
			<div class="modal-body">
				<div class="col-sm-12">
					<div class="row pb-2">
						<div class="col-sm-6">
							@Html.HiddenFor(m => m.idProgramMedica)

							<div class="row">
								<div class="col-sm-4">
									<label>Medico</label>
								</div>
								<div class="col-sm-8">
									@Html.DropDownListFor(m => m.idMedico, new SelectList(ViewBag.listamedicos, "idMedico", "nombres"), "Seleccione", new { @class = "form-control" })
								</div>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Especialidad</label>
								</div>
								<div class="col-sm-8">
									@Html.DropDownListFor(m => m.idEspecialidad, new SelectList(ViewBag.listaespecialidades, "idEspecialidad", "descripcion"), new { @class = "form-control" })
								</div>
							</div>
						</div>
					</div>
					<div class="row pb-2">
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Consultorio</label>
								</div>
								<div class="col-sm-8">
									@Html.DropDownListFor(m => m.idConsultorio, new SelectList(ViewBag.listaconsultorio, "idConsultorio", "descripcion"), new { @class = "form-control" })
								</div>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Fecha</label>
								</div>
								<div class="col-sm-8">

									@Html.EditorFor(m => m.fecProgramMedica, new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
								</div>
							</div>
						</div>
					</div>
					<div class="row pb-2">
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Hora Inicio</label>
								</div>
								<div class="col-sm-8">
									@Html.DropDownListFor(m => m.dsHrInicio, new SelectList(ViewBag.listahoras), new { @class = "form-control" })
								</div>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Hora Fin</label>
								</div>
								<div class="col-sm-8">
									@Html.DropDownListFor(m => m.dsHrFin, new SelectList(ViewBag.listahoras), new { @class = "form-control" })
								</div>
							</div>
						</div>
					</div>
					<div class="row pb-2">
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Estado</label>
								</div>
								<div class="col-sm-8">
									<select asp-for="dsEstado" class="form-control">
										<option>Activo</option>
										<option>Inactivo</option>
									</select>
								</div>
							</div>
						</div>
						<div class="col-sm-6">

						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button style="width: 80px;" type="submit" class="btn btn-primary">Guardar</button>
					<button style="width: 80px;" type="submit" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		}

	</div>
</div>
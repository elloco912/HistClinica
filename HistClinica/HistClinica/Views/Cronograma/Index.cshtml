@model IEnumerable<HistClinica.DTO.CronogramaDTO>
@{
	ViewData["Title"] = "Index";
}

<div class="container">
	<div class="col-sm-12">
		<div class="row">
			<div class="col-sm-12 pt-2 pb-3">
				<h2>Cronograma de Medicos</h2>
			</div>
		</div>


		<partial name="Create" model="new HistClinica.Models.D012_CRONOMEDICO()">

			<div class="row pt-3">
				<div class="col-sm-12">
					<table class="table table-bordered table-hover text-center" id="cronogramagrid">
						<thead>
							<tr>
								<th>Id</th>
								<th>Fecha Ini</th>
								<th>Fecha Fin</th>
								<th>Hora ini</th>
								<th>Hora fin</th>
								<th>Estado</th>
								<th>Acciones</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
							<tr>
								<td>@item.idProgramMedica</td>
								<td>@item.fechaIni</td>
								<td>@item.fechaFin</td>
								<td>@item.hrInicio</td>
								<td>@item.hrFin</td>
								<td>@item.desEstado</td>
								<td>
									<button type="submit" class="edit btn btn-primary" onclick="Cargarmodal();"><i class="fas fa-edit"></i></button>
									<a type="submit" asp-action="Delete" asp-route-id="@item.idProgramMedica" class="btn btn-danger"><i class="fas fa-minus"></i></a>
								</td>
							</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
	</div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>
<script src="~/js/cargavistaparcial.js"></script>
<script>
	$(document).ready(function() {
		$("#Crear").click(function (e) {
			var msj = @ViewBag.message;
			console.log(msj);
    });
});
</script>
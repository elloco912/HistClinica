<div class="modal-dialog" role="document">
	<div class="modal-content" style="width: 1200px;position: relative;right: 302px;">
		<div class="container">
			<div class="col-sm-12 pb-2 pt-3">
				<h4>Programacion de cita ambulatoria</h4>
			</div>
			@using (Html.BeginForm())
			{
				<div class="col-sm-12">
					<div class="row pb-3">
						<div class="col-sm-6">
							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
								<label class="form-check-label" for="inlineRadio1">Consulta</label>
							</div>
							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
								<label class="form-check-label" for="inlineRadio2">Procedimiento</label>
							</div>
						</div>
						<div class="col-sm-6"></div>
					</div>
					<div class="row pb-3">
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Especialidad</label>
								</div>
								<div class="col-sm-8">
									@Html.DropDownList("especialidad", new SelectList(ViewBag.listaespecialidades, "idtab", "descripcion"), "Seleccione", new { @class = "form-control",
								   data_cascade_combo = "#medico",
								   data_cascade_combo_source = Url.Action("GetMedicoByEsp", "Cita"),
								   data_cascade_combo_param_name = "id"
							   })
								</div>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Medico</label>
								</div>
								<div class="col-sm-8">
									@Html.DropDownList("especialidad", new SelectList(ViewBag.listamedicos, "idMedico", "nombres"), "Seleccione", new { @class = "form-control", id="medico" })
								</div>
							</div>
						</div>
					</div>
					<div class="row pb">
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Fecha Atencion</label>
								</div>
								<div class="col-sm-8">
									<select class="form-control">
										<option>15/10/2020</option>
									</select>
								</div>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Hora</label>
								</div>
								<div class="col-sm-8">
									<select class="form-control">
										<option>9:00 - 13:00</option>
									</select>
								</div>
							</div>
						</div>
						<div class="col-sm-4"></div>
					</div>
					<div class="row pb-3 pt-3">
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Dni</label>
								</div>
								<div class="col-sm-8 form-inline">
									<input type="text" class="form-control pr-2" name="">
									<button class="btn btn-primary"><i class="fas fa-search"></i></button>
								</div>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="row">
								<div class="col-sm-4">
									<label>Paciente</label>
								</div>
								<div class="col-sm-8">
									<input type="text" class="form-control" name="">
								</div>
							</div>
						</div>
					</div>
					<div class="row pt-3 pb-2">
						<div class="col-sm-12 text-right">
							<button class="btn btn-primary">Registrar</button>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
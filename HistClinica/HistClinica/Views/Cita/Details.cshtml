
@model HistClinica.DTO.CitaDTO
<div class="modal-dialog" role="document">
	<div class="modal-content" style="width: 1200px;position: relative;right: 302px;">
		<div class="modal-header">
			<h4 class="modal-title text-center" id="exampleModalLabel1">DETALLE DE CITA</h4>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="container pt-3">
			<div class="col-sm-12">
				<div class="row">
					<div class="col-md-6">
						<div class="box box-primary">
							<div class="box-body">
								<div class="form-group">
									<label>TIPO DE CITA</label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.TipoCita, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
								<div class="form-group">
									<label>FECHA</label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.fecha, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
								<div class="form-group">
									<label>HORA</label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.hora, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
								<div class="form-group">
									<label>DNI PACIENTE</label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.dniPaciente, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
								<div class="form-group">
									<label>ESTADO</label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.estado, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="box box-primary">
							<div class="box-body">
								<div class="form-group">
									<label>MEDICO</label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.medico, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
								<div class="form-group">
									<label>CONSULTORIO</label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.consultorio, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
								<div class="form-group">
									<label>DESCRIPCION </label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.descripcion, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
								<div class="form-group">
									<label>PACIENTE </label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.nombrePaciente, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
								<div class="form-group">
									<label>ESPECIALIDAD </label>
								</div>
								<div class="form-group">
									@Html.EditorFor(m => m.especialidad, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button style="width: 80px;" type="submit" class="btn btn-primary" data-dismiss="modal">Close</button>
		</div>
	</div>
</div>

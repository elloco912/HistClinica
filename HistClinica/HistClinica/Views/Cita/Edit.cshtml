@model HistClinica.DTO.CitaDTO
<div class="modal-dialog" role="document">
	<div class="modal-content" style="width: 1200px;position: relative;right: 302px;">
		<div class="container">
			<div class="col-sm-12 pb-2 pt-3 pb-2">
				<h4>Reprogramacion de cita ambulatoria</h4>
			</div>
			@using (Html.BeginForm())
			{
		<div class="col-sm-12">
			<div class="row pb-3">
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-4">
							<label>Id Cita</label>
						</div>
						<div class="col-sm-8">
							@Html.HiddenFor(m => m.idCita)
							@Html.EditorFor(m => m.idCita, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
						</div>
					</div>
				</div>
				<div class="col-sm-6">
				</div>
			</div>
			<div class="row pb-3">
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-4">
							<label>Especialidad</label>
						</div>
						<div class="col-sm-8">
							@Html.DropDownList("especialidad", new SelectList(ViewBag.listaespecialidades, "idtab", "descripcion"), "Seleccione", new
							{
								@class = "form-control",
						   data_cascade_combo = "#medico",
						   data_cascade_combo_source = Url.Action("GetMedicoByEsp", "Cita"),
						   data_cascade_combo_param_name = "id"
					   })
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-4">
							<label>Medico</label>
						</div>
						<div class="col-sm-8">
							@Html.DropDownList("medico", new SelectList(ViewBag.listamedicos, "idMedico", "nombres"), "Seleccione", new
							{
								@class = "form-control",
								@id = "medico",
						   data_cascade_combo_medico = "#fecate",
						   data_cascade_combo_source_medico = Url.Action("GetCronogramaByMedico", "Cita"),
						   data_cascade_combo_param_name_medico = "id"
					   })
						</div>
					</div>
				</div>
			</div>
			<div class="row pb">
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-4">
							<label>Fecha Atencion</label>
						</div>
						<div class="col-sm-8">
							@Html.DropDownListFor(m => m.idProgramMedica, new SelectList(ViewBag.lcronograma, "idprogramMed", "fecprogram"), "Seleccione", new
					   {
						   @class = "form-control",
						   data_cascade_combofec = "#horaate",
						   data_cascade_combo_sourcefec = Url.Action("GetHorasByCronograma", "Cita"),
						   data_cascade_combo_param_namefec = "id",
						   @id = "fecate"
					   })
						</div>
						<input type="hidden" id="desfecha" asp-for="fecha" />
					</div>
				</div>
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-4">
							<label>Hora</label>
						</div>
						<div class="col-sm-8">
							@Html.DropDownList("horaate", new SelectList(ViewBag.lhoras, "id", "hora"), "Seleccione", new { @class = "form-control", @id = "horaate" })
						</div>
						<input type="hidden" id="deshora" asp-for="hora" />
					</div>
				</div>
				<div class="col-sm-4"></div>
			</div>
			<div class="row pb-3 pt-3">
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-4">
							<label>Dni</label>
						</div>
						<div class="col-sm-8 form-inline">
							@Html.EditorFor(m => m.dniPaciente, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
							@Html.HiddenFor(m => m.dniPaciente)
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-4">
							<label>Paciente</label>
						</div>
						<div class="col-sm-8">
							<input type="hidden" class="form-control pr-2" id="idpaciente">
							<input type="text" class="form-control pr-2" id="nombrepaciente" asp-for="nombrePaciente" name="" disabled>
						</div>
					</div>
				</div>
			</div>
			<div class="row pb-3 pt-3">
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-4">
							<label>Servicios</label>
						</div>
						<div class="col-sm-8 form-inline">
							@Html.DropDownListFor(m => m.idServicioCli, new SelectList(ViewBag.servicios, "idtab", "descripcion"), "Seleccione", new { @class = "form-control" })
						</div>
					</div>
				</div>
				<div class="col-sm-6">

				</div>
			</div>
			<div class="row pt-3">
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-4">
							<label>Motivo</label>
						</div>
						<div class="col-sm-8 form-inline">
							@Html.TextAreaFor(m => m.motivoreprogramacion, new { @class = "form-control", @style = "width:365px" })
						</div>
					</div>
				</div>
				<div class="col-sm-6">

				</div>
			</div>
			<div class="row pt-3 pb-2">
				<div class="col-sm-12 text-right">
					<button class="btn btn-primary">Registrar</button>
				</div>
			</div>
		</div>
			}
		</div>
	</div>
</div>
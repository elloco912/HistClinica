            <th>
                @Html.DisplayNameFor(model => model.idgpoSangre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idFactorrh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idPersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idPacConvenio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idtpPaciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idAsegurado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nrohc)
            </td>
            <td>

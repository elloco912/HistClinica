@model IEnumerable<HistClinica.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}


    <p>
        <a type="submit" asp-action="Create" class="btn btn-primary">Nuevo Paciente</a>
        <a type="submit" asp-action="exportarExcel" asp-controller="Pacientes" class="btn btn-success">Reporte Excel</a>
        <a type="submit" asp-action="exportarPDF" asp-controller="Pacientes" class="btn btn-danger">Reporte Pdf</a>

    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idtpPaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idAsegurado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nrohc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomAcompana)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.edadAcompana)

                @Html.DisplayFor(modelItem => item.edadAcompana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dniAcompana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idgpoSangre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idFactorrh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idPersona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idPacConvenio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            @*<td>
                <a asp-action="Edit" asp-route-id="@item.idPaciente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idPaciente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idPaciente">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
